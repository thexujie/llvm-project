(library
 (name llvm_irreader)
 (public_name llvm.irreader)
 (libraries llvm)
 (foreign_stubs
  (language c)
  (names irreader_ocaml)
  (extra_deps ../llvm/llvm_ocaml.h))
 (c_library_flags (:include c_library_flags.sexp)))

(rule
 (targets c_library_flags.sexp)
 (action (run ../discover.sh irreader)))
