(library
 (name llvm_analysis)
 (public_name llvm.analysis)
 (libraries llvm)
 (foreign_stubs
  (language c)
  (names analysis_ocaml)
  (extra_deps ../llvm/llvm_ocaml.h))
 (c_library_flags (:include c_library_flags.sexp)))

(rule
 (targets c_library_flags.sexp)
 (action
  (run ../discover.sh analysis)))
