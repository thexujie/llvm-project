(library
 (name llvm_bitwriter)
 (public_name llvm.bitwriter)
 (libraries llvm unix)
 (foreign_stubs
  (language c)
  (names bitwriter_ocaml)
  (extra_deps ../llvm/llvm_ocaml.h))
 (c_library_flags (:include c_library_flags.sexp)))

(rule
 (targets c_library_flags.sexp)
 (action (run ../discover.sh bitwriter)))
